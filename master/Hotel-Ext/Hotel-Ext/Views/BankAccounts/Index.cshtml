@model IEnumerable<Hotel.Models.BankAccount>

@{
    ViewBag.Title = "Master Hotel Bank Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserHotel.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccountNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserHotel.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankAccountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankAccountNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
    <p>
        @Html.ActionLink("Back to Index Admin", "IndexAdmin", "Home")
    </p>

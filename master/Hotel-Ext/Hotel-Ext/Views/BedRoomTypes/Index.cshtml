@model IEnumerable<Hotel.Models.BedRoomType>

@{
    ViewBag.Title = "Master Hotel Bedroom Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BedRoomTypeCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BedRoomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageBedroom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SizeRoom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BedRoomTypeCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BedRoomName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageBedroom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeRoom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
